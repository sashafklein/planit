    = "Starred,"
    = link_to "TripAdvisor", about_url + "#import"
    = "Saved,"
    = link_to "GoogleDocs", about_url + "#import"
    = "spreadsheets,"
    = link_to "Foursquare", about_url + "#import"
    = "Lists or"
