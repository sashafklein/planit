- title('Private Beta Invitation')
- set_page_type('invite')

#invite-page

  .band.spaced-xxx

    .static-page.container
      .whitebox.no-mobile-portrait.like-container
        
        .eight.columns.main-content
          .left-section.padded

            .section-header= "Planit is in Private Beta"
            .static-section-content
              %p
                %i{ class: 'fa fa-bullhorn padded-icon' }
                Invite friends who you think would enjoy Planit, but also give constructive feedback!
              %p
                %i{ class: 'fa fa-envelope-square padded-icon' }
                Your invitation will allow your friends to jump the beta waitlist
              %p
                %i{ class: 'fa fa-group padded-icon' }
                We'll help you follow your friends' plans and places
              %p
                %i{ class: 'fa fa-heart padded-icon' }
                %strong.neon Thanks for sharing!

        .eight.columns.main-content
          .right-section.padded

            .section-header= "Invite a Friend!"
            .small-form-box
              .simple-entry-form
                = simple_form_for(User.new, url: invite_users_path) do |f| #NEEDSFOLLOWUP
                  = f.error_notification
                  .simple-entry-form-section
                    %i.icomoon.icon-user.simple-form-icon
                    = f.input :first_name, required: true, placeholder: 'First Name'
                  .simple-entry-form-section
                    %i.simple-form-icon
                    = f.input :last_name, required: true, placeholder: 'Last Name'
                  .simple-entry-form-section
                    %i.fa.fa-envelope.simple-form-icon
                    = f.input :email, required: true, placeholder: 'Email Address'
                  .simple-entry-form-section.form-actions.right
                    = f.button :submit, "Share the Love!", class: 'planit-button neon'
