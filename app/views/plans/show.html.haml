
= render 'show/initheader', { :background => 'white', :color => 'black', :start => '' }
/ = render 'show/persistent', { :transition => '0' }

.new-show-spacer

.body-container

  .clear
  #content_begins
  .container
    - @plan.legs.each_with_index do |leg, index|
      - leg.days.each_with_index do |day, index|
        - day.items.with_tabs.each_with_index do |item, item_index|
          = render partial: 'items/item_tab', locals: { item: item, row_index: item_index, item_index: item_index }
    - if @plan.bucket
      - @plan.bucket.each_with_index do |leg, index|
        - leg.days.each_with_index do |day, index|
          - day.items.with_tabs.each_with_index do |item, item_index|
            = render partial: 'items/item_tab', locals: { item: item, row_index: item_index, item_index: item_index }

.footer
  = render partial: 'show/footer'

