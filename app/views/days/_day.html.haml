.one.column
  = image_tag("blank.png", :width => '100%', :height => '1')

/ .plan-content-row{ class: zebra_class(day.day_in_trip, bucket) }
%div{ class: "eight columns #{zebra_class(day.day_in_trip, bucket)}-day" }
  - if day.day_in_trip 
    .plan-content-date-state-day
      day
  .plan-content-date
    .timeline-point-link{ id: "day_#{day.day_in_trip}"}
    .timeline-day-pin
      - if day.day_in_trip 
        = day.day_in_trip
      - else 
        = 'X'
      = image_tag "leg-map-icon-tip-black.png"
  .plan-content-wing{ class: zebra_class(day.day_in_trip)}
  .tab-column-wrap
    - day.items_with_tabs.in_groups_of(1).each_with_index do |day_group, row_index|
      / .tab-row-wrap.large.clicked.dayby
      - day_group.compact.each_with_index do |item, item_index|
        = render partial: 'show/item_list', locals: { item: item, row_index: row_index, item_index: item_index }

/ Day Map
%div{ class: "seven columns #{zebra_class(day.day_in_trip, bucket)}-day" }
  .day-map-container{ class: day_map_size(day.items_with_tabs.compact.length), class: "dayby" }
    .day-map
      - if previous_lodging = day.previous_lodging(index)
        %map.cluster-map{ icon: map_icon, coordinates: "#{previous_lodging.coordinate}+#{day.coordinates}", type: "day#{day.plan.maptype}" }
          .day-caption= "Day #{day.day_in_trip} Overview"
      - else
        %map.cluster-map{ icon: map_icon, coordinates: day.coordinates, type: "day#{day.plan.maptype}" }
          .day-caption= "Day #{day.day_in_trip} Overview"
