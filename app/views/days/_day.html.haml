- day.items_with_tabs.in_groups_of(4).each_with_index do |day_group, index|
  
  - unless bucket
    .plan-content-time.afternoon
  
  .plan-content-row.clicked{ class: zebra_class(day.day_in_trip, bucket) }
    - day_group.compact.each do |item|
      .content-tab-wrap
        .content-tab.clicked
          %a{href: "#"}
          = image_tag item.tab_image
          .content-tab-title= item.name
          - if item.local_name && item.local_name_unique?
            .content-tab-more-name= item.local_name
          - if item.notes
            .content-tab-more-info= item.notes.html_safe
          - if item.source && item.source_url
            .content-tab-get-more
              %b Source:
              = link_to item.source, item.source_url
          - elsif item.source_url
            .content-tab-get-more
              %b Source:
              = link_to item.source_url, item.source_url