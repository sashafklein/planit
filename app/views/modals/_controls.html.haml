.modal.fade.planit-modal#planit-modal-tag{ tabindex: '-1', role: 'dialog', aria: { hidden: 'true' } }
  .modal-dialog
    .modal-content
      .modal-mini
        %button.close{"aria-label" => "Close", "data-dismiss" => "modal", :type => "button"}
          %span{"aria-hidden" => "true"} ×
        %form
          %h4 Edit Tags
          %input{ type: 'hidden', id: 'places_to_control' }
          %button.btn.btn-primary.mini-button{:id => "planit-modal-submit-tag", :type => "button" } Save
          .form-group
            %input.form-control{ type: 'text', placeholder: 'Add New Tag' }
            / = text_field_with_auto_complete :tagging, :name, { :class => 'form-control', :placeholder => 'Add New Tag' }, { :url => formatted_tag_names(:js), :method => :get, :param_name => 'search' }

