.modal.planit-modal.fade#planit-modal-share{"aria-hidden" => "true", :role => "dialog", :tabindex => "-1"}
  .modal-dialog
    .modal-content
      .modal-header
        %button.close{"aria-label" => "Close", "data-dismiss" => "modal", :type => "button"}
          %span{"aria-hidden" => "true"} Ã—
        %h4.modal-title= "Share the Love"
      .modal-body
        %form{:id => "planit-modal-form-share"}
          .form-group
            %label.control-label{:for => "recipient-name"}= "Share #{title} with:"
            .clear-input-box
              %input#recipient.form-control.input-with-clear.share-with{:placeholder => "Email Address", :type => "text"}/
              %span.clear-input-button
                %i.fa.fa-times-circle
          .form-group
            %label.control-label{:for => "message-text"} Personal Note:
            %textarea#message-text.form-control
      .modal-footer
        %button.planit-button.gray{"data-dismiss" => "modal", :type => "button"} Cancel
        %button.planit-button.neon{:id => "planit-modal-submit-share", :type => "button"}= "Share!"