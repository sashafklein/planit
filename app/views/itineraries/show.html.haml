            .content-tab-title-info  Columbia Finger
        .content-tab-wrap
          .content-tab
            %a{href: "#"}
            = image_tag "http://farm1.staticflickr.com/93/261136266_368254059b.jpg"
            .content-tab-title-info  Sunrise Meadow
        .content-tab-wrap
          .content-tab
            .tab-sleep
            %a{href: "#"}
            = image_tag "http://www.americansouthwest.net/california/photographs700/upper-cathedral1.jpg"
