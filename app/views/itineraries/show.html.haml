            // http://www.tripadvisor.com/Attraction_Review-g61000-d139183-Reviews-Half_Dome-Yosemite_National_Park_California.html
        .content-tab-wrap
          .content-tab
            .tab-sleep
            %a{href: "#"}
            = image_tag "http://opadventureteam.com/wp-content/uploads/2013/07/IMG_0348-640x480.jpg"
