
.moneyshot{ style: "background-image: url('#{image_path @data.moneyshot}')" }
  .header-container
    = image_tag "white_logo.png", style: "float:left;"
    = image_tag "white_tagline.png", style: "float:left;"
    %a{href: "#"}
      = image_tag "white_anon_user.png", style: "float:right;", html: { border: "0" }
    %ul.menu-top
      %li.menu-link= link_to 'LAUNCH', "#"
      %li.menu-link= link_to 'BUILD', new_itinerary_path
      %li.menu-link= link_to 'DREAM', "#"
  .photo-left-right
    %a{href: "#"}
      = image_tag "blank.png"
    = image_tag 'blank.png', html: { width: "600" }
    %a{href: "#"}
      = image_tag 'blank.png'
  .moneyshot-caption
    %a{href: "#"}
      = image_tag 'down_bubble.png', html: { height: "55", src: "down_bubble.png", width: "55" }
    %strong= @data.title
    |
    %i= @data.duration
    %span{style: "float:right;font-size:12px;padding-right:13px"}= "\"#{@data.subtitle}\""
.persistent-header
  .header-container
    = image_tag "black_logo.png", style: "float:left;"
    %a{href: "#"}
      = image_tag "black_anon_user.png", style: "float:right;", html: { border: "0" }
    %ul.menu-top
      %li.menu-link.menu-link-build= link_to 'LAUNCH', ""
      %li.menu-link.menu-link-build= link_to 'BUILD', new_itinerary_path
      %li.menu-link.menu-link-build= link_to 'DREAM', "#"

.body-container

  .overview
    #map-list{ data: { list: 'john-muir-trail' } }
    .map-data{ id: "#{@slugged_title}-data", data: {markers: @marker_coordinates} }
    .map{ id: "#{@slugged_title}-map" }
    .summary-content
      .user-circular{ style: "background-image:url(#{image_path 'niko_user.png'})"}
      .summary-text
        %b
          = "by #{@data.trailblazer}, #{@data.trailblaze_date}"
        %br
        Following in the footsteps of ___, trekked from Happy Isles to Whitney Portal through hail, snow, thunderstorms, fog, and glorious sunshine across 220 miles of wilderness.

    .dashboard-wrap
      .dashboard-content
        .ratings{ style: "background-image:url(#{image_path 'money_off.png'})"}
          %img{ src: "#{image_path 'money_on.png'}"}
        %br trip "persona"
        %br trip tags
      .dashboard-content
        .ratings{ style: "background-image:url(#{image_path 'star_off.png'})"}
          %img{ src: "#{image_path 'star_on.png'}"}
        %br
        %br [*][*][*][*][ ]
        %br author ratings
        %br trip trends
      .dashboard-content
        .ratings{ style: "background-image:url(#{image_path 'fruit_off.png'})"}
          %img{ src: "#{image_path 'fruit_on.png'}"}
        %br
        %br [o][o][o][o][ ]
        %br trip "completion"
        %br trip photo count

  .body-off
    .timeline-wrap
      .timeline-travel
        Drive to Yosemite Valley
  .body-on
    .timeline-wrap
      .timeline-cluster.cluster-A
        %b Days 1-3:
        Yosemite Valley to Tuolumne Meadows
      .itinerary-cluster-wrap-on
        .cluster-moneyshot{ style: "background-image: url('#{image_path @data.moneyshot}')" }
          .cluster-caption
            From the Valley to the Meadows
      .itinerary-content-date.itinerary-content-date-1
      .itinerary-content-time.itinerary-content-time-late-morning
      .itinerary-content-wrap.itinerary-content-wrap-onA
        .content-tab-wrap
          .content-tab
            %a{href: "#"}
            = image_tag "http://theegetawaygal.com/wp-content/uploads/2014/04/Yosemite_N.P._Vernal_Falls_Rainbow.jpg"
            .content-tab-title-info Vernal Fall
        .content-tab-wrap
          .content-tab
            %a{href: "#"}
            = image_tag "http://www.dkulczyk.com/wp-content/uploads/2012/08/vernal-falls-in-morning-light.jpg"
            .content-tab-title-info Nevada Fall
            .content-tab-more-info
              Top of Nevada Fall
              Distance: 5.4 mi (8.7 km) round trip (via Mist Trail)
              Elevation gain: 2000 ft (610 m)
              Difficulty: Strenuous
              Time: 5-6 hours
            .content-tab-get-more
              Source: 
              %a{href: "#"} Tripadvisor
        .content-tab-wrap
          .content-tab
            %a{href: "#"}
