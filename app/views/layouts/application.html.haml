!!!
%html{ data: { ng_app: "ngApp"} }
  %head
    %base{ href: '/' }
    %meta{charset: "utf-8"}/
    %meta{content: "NOODP", name: "ROBOTS"}/
    %meta{content: "initial-scale=1", name: "viewport"}/
    %title= content_for?(:title) ? "Planit - #{ yield(:title) }" : "Planit - Save and Share the Places You Love"
    = render 'application/google_analytics'
    = csrf_meta_tags
    = stylesheet_link_tag :application, media: "all"
    = favicon_link_tag 'fav_ico.png'
  %body{ class: body_class, ng_controller: 'ApplicationCtrl' }
    = render "application/modals", { page_type: content_for(:page_type) || '', title: content_for(:title) || 'This Page' }
    #planit-wrapper
      .searching-mask
      = render "application/flashes"
      = render_header content_for(:page_type)
      = yield
      = render_footer content_for(:page_type)
    = render "application/javascript"
    - (@directive_templates || []).uniq.each do |template_path|
      = render "templates/#{template_path}"