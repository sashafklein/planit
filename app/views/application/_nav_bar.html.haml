= link_to_unless( page_type == 'places', ( render 'application/nav_places', {page_type: page_type} ), places_user_path(current_user), { class: 'nav-item-link' })

= link_to_unless( page_type == 'guides', ( render 'application/nav_guides', {page_type: page_type} ), guides_user_path(current_user), { class: 'nav-item-link' })

- if browser.mobile?
  .nav-item-link{ ng_click: 'home()' }= render 'application/nav_add', {page_type: page_type}
- elsif !browser.mobile?
  .nav-item-link{ ng_click: 'expandBar()' }= render 'application/nav_add', {page_type: page_type}

= link_to_unless( ( page_type == 'inbox' || current_user.message_count == 0 ), ( render 'application/nav_inbox', {page_type: page_type, current_user: current_user} ), inbox_user_path(current_user), { class: 'nav-item-link' })

= link_to_unless( !rich_content?(page_type), ( render 'application/nav_share', {page_type: page_type} ), '#planit-modal-share', { class: 'nav-item-link', data: {toggle: 'modal', target: '#planit-modal-share', keyboard: 'false', backdrop: 'static'}})