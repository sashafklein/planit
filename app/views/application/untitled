.single-page-header
  #planit-header.except-landscape{ ng_class: "{'black': mobile, 'white': !mobile}" }
    .container.none.pseudo
      .header-wrapper
        %ng_include{ src: "'header/ng_logo_container.html'" }
        .top-menu-container{ ng_show: "currentUserIsActive", ng_click: 'toggleMainMenu()' }
          %ng_include{ src: "'header/user_avatar'" }
          %ul.dropdown-menu-right.planit-dropdown-menu{ ng_show: 'mainMenuToggled' }
            %ng_include{ src: "'header/dropdowns/main_menu'" }


        - if current_user_is_active # admin or member

          / %a.mobile.page-title{ ng_href: root_path }= "PLANIT" if browser.mobile?
          - else
            .top-menu-container
              %a.main-menu-dropdown.dropdown-toggle{ "data-toggle" => "dropdown", :href => "#" }= render 'header/user_avatar'
              %ul.dropdown-menu.dropdown-menu-right.planit-dropdown-menu= render 'header/dropdowns/main_menu'
          - if !browser.mobile?
            .side-menu-container.large-screen.inline
              .top-nav-bar{ ng_controller: 'NavBarCtrl' }= render 'application/nav_bar', { page_type: page_type }

          / .search-and-filter-wrap
          /   %expanding_header_search{ show_teaser: "#{show_search?(page_type)}", page_type: "#{page_type}" }
          /   - include_templates :expanding_header_search, :search_and_add

        - elsif current_user # inactive user

          .top-menu-container
            = link_to destroy_user_session_path, :method => 'delete' do
              = render 'header/user_avatar'
          .side-menu-container.large-screen.inline
            %strong.a-override.a-gray.h-neon= link_to "LOG OUT", destroy_user_session_path, :method => 'delete'

        - else # no log-in yet

          .top-menu-container
            = link_to new_user_session_path do
              = render 'header/user_avatar'
          .side-menu-container.large-screen.inline
            %strong= "REQUEST INVITE"
            %span.divider= "|"
            %strong.a-override.a-gray.h-neon= link_to "LOG IN", new_user_session_path

  - else # mostly devise pages

    .simple-header-top= render 'header/simple', { color: "#{browser.mobile? ? 'white' : 'black'}" }

- unless fullscreen?(page_type)
  #header-spacing.except-landscape