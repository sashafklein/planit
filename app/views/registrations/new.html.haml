- set_page_type('simple')

.band.spaced
  .container
    .sixteen.columns
      .center-box

        .simple-entry-header SIGN UP
        %hr.divider{ style: "width: 300px; margin-bottom: 18px"}

        .simple-entry-form
          = simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
            = f.error_notification
            .simple-entry-form-section
              %i.icomoon.icon-user.simple-form-icon
              = f.input :first_name, required: true, autofocus: true, placeholder: 'First Name', input_html: {value: params[:first_name]}
            .simple-entry-form-section
              %i.simple-form-icon
              = f.input :last_name, required: true, placeholder: 'Last Name', input_html: {value: params[:last_name]}
            .simple-entry-form-section
              %i.fa.fa-envelope.simple-form-icon
              = f.input :email, required: true, placeholder: 'Email', input_html: {value: params[:email]}
            .simple-entry-form-section
              %i.fa.fa-key.simple-form-icon
              = f.input :password, required: true, placeholder: 'Password'
            .simple-entry-form-section
              %i.fa.fa-key.simple-form-icon
              = f.input :password_confirmation, required: true, placeholder: 'Confirm Password'
            .simple-entry-form-section.form-actions.right
              = f.button :submit, "Sign up", class: "planit-button neon"

        %hr.divider{ style: "width: 300px;"}
        .simple-entry-links
          = render "devise/shared/links"