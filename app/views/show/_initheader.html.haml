.transparent-header{ class: start }
  .container
    %div{ class: 'sixteen columns' }
      .header-container
        .logo-container
          = image_tag "#{color}_logo.png", style: "float:left;"
          / = image_tag "white_tagline.png", style: "float:left;", id: "tagline"
        .user-icon{ class: color }
          = image_tag "#{color}_anon_user.png", style: "float:right;", html: { border: "0" }
        %ul.menu-top
          %li.menu-link{ class: color }= link_to 'PRINT', print_plan_path
          / %li.menu-link{ class: color }= link_to 'IMPORT NEW', new_plan_path
          / %li.menu-link{ class: color }= link_to 'LAUNCH', print_plan_path
          / %li.menu-link{ class: color }= link_to 'BUILD', new_plan_path
          / %li.menu-link{ class: color }= link_to 'DREAM', "#"