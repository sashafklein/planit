- set_page_type('simple')

.band.spaced
  .container
    .sixteen.columns
      .center-box

        .simple-entry-header Change your password
        %hr.divider{ style: "width: 300px; margin-bottom: 18px"}

        .simple-entry-form
          = simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f|
            = f.error_notification
            = f.input :reset_password_token, as: :hidden
            = f.full_error :reset_password_token
            .simple-entry-form-section{ style: "#{'display: none' if !@resource}" }
              %i.fa.fa-envelope.simple-form-icon
              = f.input :email, required: true, disabled: true, placeholder: ( @resource.email if @resource )
            .simple-entry-form-section
              %i.fa.fa-key.simple-form-icon
              = f.input :password, required: true, autofocus: true, placeholder: 'New password'
            .simple-entry-form-section
              %i.fa.fa-key.simple-form-icon
              = f.input :password_confirmation, required: true, placeholder: 'Confirm Password'
            .simple-entry-form-section.form-actions.right
              = f.button :submit, "Change", class: "planit-button neon"

        %hr.divider{ style: "width: 300px;"}
        .simple-entry-links
          = render "devise/shared/links"