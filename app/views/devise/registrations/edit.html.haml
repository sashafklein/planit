= render 'show/header', { :background => 'white', :color => 'black', :start => '', :page_type => 'simple', :title => ['explore. dream. discover.',''] }

.band.spaced
  .container
    .sixteen.columns
      .center-box

        .simple-entry-header= "Edit #{resource_name.to_s.humanize}"
        %hr.divider{ style: "width: 300px;"}

        .simple-entry-form
          = simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f|
            = f.error_notification
            .simple-entry-form-section
              %i.fa.fa-envelope.simple-form-icon
              = f.input :email, required: true, autofocus: true, placeholder: 'Email'
              - if devise_mapping.confirmable? && resource.pending_reconfirmation?
                %p
                  Currently waiting confirmation for: #{resource.unconfirmed_email}
            .simple-entry-form-section
              %i.fa.fa-key.simple-form-icon
              = f.input :password, autocomplete: "off", hint: "leave it blank if you don't want to change it", required: false, placeholder 'New Password'
            .simple-entry-form-section
              %i.fa.fa-key.simple-form-icon
              = f.input :password_confirmation, required: false, 'Confirm New Password'
            .simple-entry-form-section
              %i.fa.fa-key.simple-form-icon
              = f.input :current_password, hint: "we need your current password to confirm your changes", required: true, placeholder: 'Current Password'
            .simple-entry-form-section.form-actions.right
              = f.button :submit, "Update"
              
        %hr.divider{ style: "width: 300px;"}
        .simple-entry-links
          %h3 Cancel my account
          %p
            Unhappy? #{link_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete}
          = link_to "Back", :back