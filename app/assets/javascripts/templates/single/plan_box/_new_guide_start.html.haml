        / { ng_click: 'focusOnUserSelect()' }
        .avatar-letter{ ng_show: "!m.userInQuestion().avatarImage"} {{ m.userInQuestion().firstLetter }}
      .select-user-input
        .user-in-question{ ng_show: "!selectingUser" } {{ m.userInQuestion().name }}
        / , ng_click: "focusOnUserSelect()"
        / .input-and-results{ ng_show: "selectingUser" }
        /   %input#user-select{ ng_model: 'selectedUserName', ng_blur: 'selectingUser=false;calculateSelectedUser()', ng_on_esc_key: 'blurUserSelect()', ng_on_enter_key: 'chooseFirstUser()', autocomplete: 'off', placeholder: "Choose User to Explore" }
        /   %i.select-user-dropdown.fa.fa-caret-down{ ng_class: "{'hidden': selectingUser}" }
        /   %ul.suggested-results.text-based.blue{ ng_show: '!m.typing && selectingUser' }
        /     / %li.search-results-list{ ng_show: '!userOptions().length', ng_click: 'selectThisUser( m.currentUser )' } 
