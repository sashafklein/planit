.guide-controls
  .setplanbox-on-plan-page.set-guide{ ng_show: 'm.list' }

    .chosen-plan{ ng_show: 'm.list && !m.rename' }
      %span.title{ ng_click: 'renameList()' }
        {{ m.list.name }}
        %i.fa.fa-pencil.rename{ ng_click: 'renameList()', ng_show: 'm.userOwnsLoadedList' }
      %i.fa.fa-cog.settings{ ng_show: 'm.items.length', ng_click: 'm.settingsBoxToggle()', ng_class: "{'opened': m.settingsBoxToggled}" }
    .chosen-plan.above-mask{ ng_show: 'm.list && m.rename' }
      %input.title#rename{ ng_model: 'm.rename', ng_on_enter_key: 'saveRenameList()', ng_on_esc_key: 'cancelRenameList()' }

  .settingsbox-on-plan-page{ ng_show: "m.list && ( m.settingsBoxToggled || m.rename )", ng_class: "{'in-rename': m.rename}" }
    .plan-settings-dropdown{ ng_show: '!m.rename && m.items.length' }
      %plan_settings{ m: 'm' }
    .rename-confirmation{ ng_show: 'm.rename' }
      .planit-button.gray{ ng_click: 'cancelRenameList()' } Cancel          
      .planit-button.neon{ ng_click: 'saveRenameList()' } Save
