%ul.faux-planit-dropdown

  %li.planit-dropdown-menu.disabled{ ng_show: "m.userOwnsPlan()" }
    %i.planit-dropdown-menu-icon.fa.fa-group
    Add Collaborators
  %li.planit-dropdown-menu.disabled{ ng_show: "!m.userOwnsPlan()" }
    %i.planit-dropdown-menu-icon.fa.fa-group
    Request to be a Collaborator
  %li.planit-dropdown-menu.disabled{ ng_show: "m.userOwnsPlan()" }
    %i.planit-dropdown-menu-icon.fa.fa-upload
    Import
  %li.planit-dropdown-menu.disabled{ ng_show: "m.userOwnsPlan()" }
    %i.planit-dropdown-menu-icon.fa.fa-calendar
    Set Dates
  %li.divider
  %li.planit-dropdown-menu{ ng_click: 'm.plan().copy()'}
    %i.planit-dropdown-menu-icon.fa.fa-clipboard
    Copy this Guide
  %li.planit-dropdown-menu.disabled
    %i.planit-dropdown-menu-icon.fa.fa-compress
    Merge this Guide with Another
  %li.planit-dropdown-menu.disabled{ ng_show: "m.userOwnsPlan()" }
    %i.planit-dropdown-menu-icon.fa.fa-expand
    Split this Guide
  %li.divider
  %a{ href: '#planit-modal-share', target: '_self', data: { toggle: 'modal', target: '#planit-modal-share', keyboard: 'false', backdrop: 'static'} }
    %li.planit-dropdown-menu
      %i.planit-dropdown-menu-icon.fa.fa-paper-plane
      Share this Guide
  %a{ ng_href: "{{kmlPath()}}", target: '_self' }
    %li.planit-dropdown-menu
      %i.planit-dropdown-menu-icon.fa.fa-download
      Export as KML
  %li.planit-dropdown-menu.disabled
    %i.planit-dropdown-menu-icon.fa.fa-table
    Export as CSV
  %a{ ng_href: "{{printPath()}}", target: '_self' }
    %li.planit-dropdown-menu
      %i.planit-dropdown-menu-icon.fa.fa-print
      Print this Guide
  %li.divider{ ng_show: "m.userOwnsPlan()" }
  %li.planit-dropdown-menu{ ng_show: "m.userOwnsPlan()", ng_click: 'm.planManager.removePlan( m.plan().id )', target: '_self' }
    %i.planit-dropdown-menu-icon.fa.fa-trash
    Delete Plan