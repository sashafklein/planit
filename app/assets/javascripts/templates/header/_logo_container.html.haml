.logo-container
  = link_to root_path do
    = image_tag "logo_only_black.png", alt: 'o', class: "logo-image-top", ng_show: "!mobile" 
    = image_tag "logo_only_white.png", alt: 'o', class: "logo-image-top", ng_show: "mobile" 
    = image_tag "logo_my_only.png", alt: 'MY', class: "logo-my-top large-screen", ng_show: '!list || list && list.user_id == currentUserId'
    = image_tag "logo_name_only_black.png", alt: 'o', class: "logo-name-top", ng_show: "!mobile"
  = image_tag 'logo_guides_only.png', alt: 'GUIDES', class: 'logo-title-top guides largest-screen', ng_show: '!list && hasLists()'
  = image_tag 'logo_guide_only.png', alt: 'GUIDE', class: 'logo-title-top guide largest-screen', ng_show: 'list'
  / = image_tag('logo_inbox_only.png', alt: 'INBOX', class: 'logo-title-top inbox largest-screen')