.nav-bar
  .nav-item-link
    .nav-item.nav-item-inbox.disabled
      / # { class: "#{'selected' if page_type == 'inbox'} #{'disabled' unless current_user.message_count > 0 }"}
      %i.nav-item-icon.fa.fa-inbox
        / - if current_user.message_count > 0 && page_type != 'inbox'
        /   %span.inbox-count= current_user.message_count
      .nav-item-hint
        %span MY INBOX

  %a.nav-item-link{ ng_click: 'm.goHome()' }
    .nav-item.nav-item-home{ ng_class: "{ 'selected': !m.plan() }" }
      %i.nav-item-icon.fa.fa-home
      .nav-item-hint
        %span HOME

  .nav-item-link{ ng_show: "!m.plan()" }
    .nav-item.nav-item-share.disabled
      %i.nav-item-icon.fa.fa-paper-plane
      .nav-item-hint
        %span SHARE THIS

  %a.nav-item-link{ href: "#planit-modal-share", ng_show: "m.plan()", data: {toggle: 'modal', target: '#planit-modal-share', keyboard: 'false', backdrop: 'static'} }
    .nav-item.nav-item-share
      %i.nav-item-icon.fa.fa-paper-plane
      .nav-item-hint
        %span SHARE THIS