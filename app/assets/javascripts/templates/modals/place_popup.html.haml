#place-popup{ ng_click: "closePopup()" }
  .place-popup-wrapper{ ng_mouseenter: "canClose=false", ng_mouseleave: "canClose=true" }
    .place-popup-external-sleeve
      .index-count
      .previous-place-button
        %i.fa.fa-caret-up
      .next-place-button
        %i.fa.fa-caret-down
      .corner-button.add-photo-button
        %i.fa.fa-camera-retro
      .corner-button.see-map-button
        %i.md-map
      .corner-button.close-popup-button{ ng_click: "closePopup()", ng_mouseover: "canClose=true", ng_mouseleave: "canClose=false" }
        %i.fa.fa-times
      .corner-button.leave-note-button
        %i.md-comment
      .place-popup-internal-sleeve
        .first-section
          .previous-image-button
          .next-image-button
          .image-caption
          .image-gallery
        .second-section
          .place-name
          .place-type
            .place-type-icon
            .place-type-text
          .show-hide-place-details{ ng_click: "" }
            / %i.fa.fa-caret-down
          .place-location-details{ ng_show: "" }
            .alt-names
            .street-address
            .sub-locality
            .locality
            .state-and-country
          .place-venue-details{ ng_show: "" }
            .open-or-closed
            .full-hours
              .day-of-week{ ng_repeat: "day in days" }
                .day-letter
                .day-hours
          .place-venue-ratings
            .ratings{ ng_repeat: "rater in raters" }
              .icon-and-name
              .rating-value
          .place-venue-owner-comments{ ng_show: "" }
          .place-venue-comments
            .friends{ ng_repeat: "friend in friends" }
              .comment-avatar
              .comment-status
              .comment-note
            .experts{ ng_repeat: "expert in experts" }
              .comment-avatar
              .comment-status
              .comment-note